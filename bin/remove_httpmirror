require "filehosting/binenv"
require "filehosting/httpmirror"

require "uri"

FileHosting::BinEnv.new(FileHosting::ConfigSimpleArgReader.new(["name", "url", "pattern"])) do |env|
	name= env.args.shift
	begin
		url= URI.parse(env.args.shift)
	rescue ArgumentError => e
		puts e
		exit 1
	end
	pattern= /#{env.args.shift}/
	mirror= FileHosting::HTTPMirror.new(env.config)
	mirror.remove(name, url, pattern)
end
