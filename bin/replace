require "filehosting/binenv"

FileHosting::BinEnv.new(FileHosting::ConfigSimpleArgReader.new(["uuid", "file"])) do |env|
	uuid= env.read_uuid(env.args[0])
	file= env.args[1]
	begin
		File.open(file) do |f|
			env.config.datasource.update_filedata(uuid, f)
		end
	rescue Errno::ENOENT => e
		puts e
		exit 1
	end
end
