<div class="search_result">
	<table class="sortable" id="files">
		<tr class="sorttop">
			<th>Name</th>
			<th class="date">Geändert</th>
			<th class="numeric">Größe</th>
			<th>Type</th></tr>
		</tr>
% search_result.each do |fileinfo|
		<tr>
			<td><a href="<%= webroot %>/files/<%= fileinfo.uuid.to_html %>"><%= fileinfo.filename.to_html %></a></td>
			<td></td>
			<td class="size"><%= fileinfo.size.to_html %></td>
			<td><%= fileinfo.mimetype.to_html %></td>
		</tr>
% end
	</table>
</div>
