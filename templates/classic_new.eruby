% use "classic.css"
% use "sortable.js"
<div class="search_result">
	<table class="sortable" id="files">
		<tr class="sorttop">
			<th>Name</th>
			<th class="date">Geändert</th>
			<th class="numeric">Größe</th>
			<th>Type</th></tr>
		</tr>
% dirs.each do |tag|
		<tr>
			<td><a href="<%= webroot %>/classic<%= WebClassicPage.url([tag], tags, true) %>"><%= tag.to_html %></a></td>
			<td></td>
			<td class="size"></td>
			<td>application/x-directory</td>
		</tr>
% end
	</table>
</div>
